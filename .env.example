# Server configuration
DIALTONE_LISTEN_ADDR=:8080

# Database
POSTGRES_USER=dialtone
POSTGRES_PASSWORD=dialtone
POSTGRES_DB=dialtone
DIALTONE_DB_URL=postgres://dialtone:dialtone@postgres:5432/dialtone?sslmode=disable

# TLS (optional; set both or neither)
DIALTONE_TLS_CERT=
DIALTONE_TLS_KEY=

# Security
DIALTONE_USERNAME_PEPPER=change-me
DIALTONE_CHANNEL_KEY=base64-32-byte-key
DIALTONE_ADMIN_TOKEN=change-me

# TURN (coturn)
TURN_USER=turn
TURN_PASS=turnpass
TURN_REALM=dialtone
TURN_MIN_PORT=50000
TURN_MAX_PORT=50040
